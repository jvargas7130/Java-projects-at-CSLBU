import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.Point;
import java.awt.Rectangle;

/**
 * Battery class shows the number of missiles available for launch. 
 * Battery also extends rectangle 
 * 
 * 
 * @author Jesus Vargas
 *
 */
public class Battery extends Rectangle {
	private int numMissiles;
	private Color color;
	private boolean active;
	
	
	public Battery(Point loc, Color c){
		 x =  (int) loc.getX();
	     y =  (int) loc.getY();
	     active = true;
		numMissiles = 10;
		color = c;
	}
	
	public  void draw(Graphics g, int height,int width){
		g.setColor(color);
		g.drawRect( x, y, 100, 100);//building
		g.setFont(new Font("Arial", Font.PLAIN,16));
		g.drawString(" " + numMissiles, x, y);
	}
	
	public int getNumMissiles(){
		return numMissiles;
	}
	
	public void removeMissile(){
		if(numMissiles > 0){
			numMissiles--;
		}
		
	}
	
	public Point getLocPoint(){
		return new Point(x,y);
		
	}
	
	public boolean isActive(){
		return active;
	}
	
	public Boolean isHit(Point p){
		
		boolean hit = false;
		
		if(contains(p)){
			numMissiles = 0;
			active = false;
			hit = true;
		}
		
		
		
		
		
		return hit;
	}


	
}
