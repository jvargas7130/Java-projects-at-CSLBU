	}

	@Override
	public void actionPerformed(ActionEvent e) {

		Scanner in = new Scanner(System.in);

		if (e.getSource() == fire) {
			player = 'f';

	

			// char fire = 'f';
			System.out.println("Client ->");
			write.println("f");

		} else if (e.getSource() == water) {
			player = 'w';

			System.out.println("Client ->");
			write.println("w");

		} else if (e.getSource() == grass) {
			player = 'g';

			System.out.println("Client ->");
			write.println("g");

		}

	}

}
