/**
 * Program creates a opponet and extends trainer
 * 
 * @author Jesus Vargas
 *
 */
public class Opponent extends Trainer {

	/**
	 * Opponent type variable stores element of pokemon
	 */
	private int type;

	/**
	 * opponent constructor
	 * 
	 * @param name
	 *            string name
	 * @param hp
	 *            String health
	 * @param type
	 *            String type of pokemon
	 */
	public Opponent(String name, int hp, String attackSpeech, String looseSpeech,String winSpeech ) {
		super(name, hp);
		this.type = type;
	}

	/**
	 * Get opponent Type returns type of pokemon opponent is using
	 * 
	 * @return
	 */
	public int getOppType() {
		return type;
	}

	/**
	 * Attack speach method that opponet use
	 */
	@Override
	void attackSpeach() {

		if (getName().equals("Team Rocket")) {

			System.out.println("Prepare for Trouble!");
			System.out.println("Make it double!");
			System.out.println("To Protect the world from devastation!");
			System.out.println("To unite all peoples within our nation!");
			System.out.println("To denonce the evils of truth and love!");
			System.out.println("To extend our reach to the stars above!");
			System.out.println("Jessie!");
			System.out.println("James!");
			System.out.println("Team Rocket, blast off at the speed of light!");
			System.out.println("Meowth! That's right!");

		} else if (getName().equals("lass")) {
			if (getOppType() == 0) {
				System.out.println("Give it all you got " + getCurrentPokemon().getName());
			} else if (getOppType() == 1) {
				System.out.println("Im a hurt you!!");
			} else if (getOppType() == 2) {
				System.out.println("YOU THINK YOU ARE UP TO THE CHALLENGE!");
			} else if (getOppType() == 3) {
				System.out.println("Im going to win!");
			}

		} else if (getName().equals("Drake")) {
			if (getOppType() == 0) {
				System.out.println("Attack!!!" + getCurrentPokemon().getName());
			} else if (getOppType() == 1) {
				System.out.println("GO FOR THE WEAKPOINT");
			} else if (getOppType() == 2) {
				System.out.println("I WONT GIVE UP!!");
			} else if (getOppType() == 3) {
				System.out.println("Lets go " + getCurrentPokemon().getName() + " NOW REMMBER WHAT I TOUGHT YOU!!");
			}

		}

	}

	/**
	 * Win speach method for each opponent
	 */
	@Override
	void winSpeach() {

		if (getName().equals("Team Rocket")) {
			if (getOppType() == 1) {
				System.out.println("We did it ");
			} else if (getOppType() == 2) {
				System.out.println("Team Rocket blasting off to victory!!!");
			} else if (getOppType() == 3) {
				System.out.println("MEOW we won!!");
			} else if (getOppType() == 4) {
				System.out.println("Another victory for Team Rocket");
			}

		} else if (getName().equals("lass")) {
			if (getOppType() == 1) {
				System.out.println("Vicotry!!");
			} else if (getOppType() == 2) {
				System.out.println("Dont Mess with me!!");
			} else if (getOppType() == 3) {
				System.out.println("Is that all you got!!!");
			} else if (getOppType() == 4) {
				System.out.println("You got more training to do!! LOL");
			}

		} else if (getName().equals("Drake")) {
			if (getOppType() == 1) {
				System.out.println("I am Drake, the best pokemon catcher in the world");
			} else if (getOppType() == 2) {
				System.out.println("Better luck next time");
			} else if (getOppType() == 3) {
				System.out.println("Youre problem is you are overconfident");
			} else if (getOppType() == 4) {
				System.out.println("Another win! HA!");
			}

		}
	}

	/**
	 * Loss speach methdod for each opponenet
	 */
	@Override
	void lossSpeach() {

		if (getName().equals("Team Rocket")) {
			if (getOppType() == 1) {
				System.out.println("Team Rocket blasting off again...........* ");
			} else if (getOppType() == 1) {
				System.out.println("OHH!! :(");
			} else if (getOppType() == 1) {
				System.out.println("We will meet again next time");
			} else if (getOppType() == 1) {
				System.out.println("MEOW oh well!");
			}

		} else if (getName().equals("lass")) {
			if (getOppType() == 1) {
				System.out.println("Ohhh maaan. I cant loose ");
			} else if (getOppType() == 1) {
				System.out.println("Why me");
			} else if (getOppType() == 1) {
				System.out.println("No fair, you cheated");
			} else if (getOppType() == 1) {
				System.out.println("Good fight!");
			}

		} else if (getName().equals("Drake")) {
			if (getOppType() == 1) {
				System.out.println("NOOOOOOOOO!! I CANT LOOSE. CRY CRY");
			} else if (getOppType() == 1) {
				System.out.println("Catch you next time!");
			} else if (getOppType() == 1) {
				System.out.println("Youre a great Trainer!");
			} else if (getOppType() == 1) {
				System.out.println("I have more training to do!!");
			}

		}

	}

	/**
	 * Choose style method chooses style of fight
	 * 
	 * @return integer style
	 */
	@Override
	int chooseStyle() {
		int style = (int) (Math.random() * 2) + 1;
		return style;
	}

	/**
	 * Choose move chooses fight move
	 * 
	 * @return integer move
	 */
	@Override
	int chooseMove(int style) {
		int move = (int) (Math.random() * 3) + 1;
		return move;
	}

}
